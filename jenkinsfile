pipeline {
    agent any
    
    stages {
        stage('Build') {
            steps {
                // Add your build commands here
                sh 'mvn clean package'
            }
        }
        stage('Test') {
            steps {
                // Add your test commands here
                sh 'mvn test'
            }
        }
        stage('Deploy') {
            when {
                // Deploy only if the branch is Master
                branch 'Master'
            }
            steps {
                // Add your deployment commands here
                sh 'scp target/myapp.jar user@server:D:/Jenkins'
            }
        }
    }
}
